schema {
    query: Query
    #    mutation: Mutation
}

type Query {
    planets: [Planet!]!
    planet(id: ID!): Planet!
}

type Planet {
    id: ID!
    name: String!
    # population in millions
    population: Float!
    continent: Continent
    # todo satellites
}

# todo
enum Continent {
    AFRICA
    ASIA
    EUROPE
    NORTH_AMERICA
    SOUTH_AMERICA
    ANTARCTICA
    AUSTRALIA
}

