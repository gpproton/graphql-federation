type Query {
    getSatellites: [Satellite!]!
    getSatellite(id: ID!): Satellite!
}

type Satellite {
    id: ID!
    name: String!
    lifeExists: LifeExists!
}

type Planet @key(fields: "id") @extends {
    id: ID! @external
    satellites: [Satellite!]
}

enum LifeExists {
    YES,
    OPEN_QUESTION,
    NO_DATA
}
